<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.iame.qnnect.android.viewmodel.EditDrinkViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/p_ivory">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/invite_top"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:padding="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="17dp"
                android:src="@mipmap/ic_back_btn_foreground">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/back_btn"
                app:layout_constraintBottom_toBottomOf="@id/back_btn"
                android:fontFamily="@font/im_hyemin_bold"
                app:layout_constraintLeft_toRightOf="@id/back_btn"
                android:textSize="18dp"
                android:textColor="@color/gray_1"
                android:text="재료 넣기"
                android:layout_marginLeft="5dp">
            </TextView>

            <ImageView
                android:id="@+id/store_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:padding="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="17dp"
                android:src="@mipmap/ic_store_bottom_foreground">
            </ImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/invite_top"
            android:background="@color/gray_4">
        </View>


        <TextView
            android:id="@+id/recipe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="레시피 보기"
            android:background="@drawable/recipe_btn_custom"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/im_hyemin_bold"
            android:layout_marginLeft="27dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="35dp">
        </TextView>

        <ImageView
            android:id="@+id/drink_img"
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/recipe_btn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/img_mydrink_default_foreground"
            android:layout_marginTop="20dp">
        </ImageView>

        <ProgressBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="20dp"
            android:max="100"
            android:progress="34"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/custom_progressbar"
            app:layout_constraintTop_toBottomOf="@id/drink_img" />

        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            app:layout_constraintLeft_toLeftOf="@id/day_three"
            app:layout_constraintRight_toRightOf="@id/day_three"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/seekBar"
            app:layout_constraintBottom_toBottomOf="@id/seekBar"
            android:layout_gravity="center">
        </View>
        <View
            android:layout_width="2dp"
            android:layout_height="15dp"
            app:layout_constraintLeft_toLeftOf="@id/day_five"
            app:layout_constraintRight_toRightOf="@id/day_five"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="@id/seekBar"
            app:layout_constraintBottom_toBottomOf="@id/seekBar"
            android:layout_gravity="center">
        </View>

        <TextView
            android:id="@+id/day_one"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/seekBar"
            app:layout_constraintLeft_toLeftOf="@id/seekBar"
            android:layout_height="wrap_content"
            android:text="얼음"
            android:layout_marginLeft="3dp"
            android:gravity="bottom|center"
            android:textColor="@color/p_brown"
            android:textStyle="bold"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/day_three"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/seekBar"
            app:layout_constraintLeft_toRightOf="@id/day_one"
            app:layout_constraintRight_toLeftOf="@id/day_five"
            android:text="베이스"
            android:gravity="center|bottom"
            android:textColor="@color/p_brown"
            android:textStyle="bold"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/day_five"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/seekBar"
            app:layout_constraintLeft_toRightOf="@id/day_three"
            app:layout_constraintRight_toLeftOf="@id/day_seven"
            android:text="주 재료"
            android:gravity="center|bottom"
            android:textColor="@color/p_brown"
            android:textStyle="bold"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp">
        </TextView>

        <TextView
            android:id="@+id/day_seven"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="토핑"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/seekBar"
            app:layout_constraintRight_toRightOf="@id/seekBar"
            android:gravity="center|bottom"
            android:textColor="@color/p_brown"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp">
        </TextView>


        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/day_one"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="27dp"
            android:text="내 재료"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:paddingBottom="10dp">
        </TextView>

        <TextView
            android:id="@+id/material_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/text3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="17dp"
            android:text="전체보기"
            android:textColor="@color/gray_3"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="14dp"
            android:padding="10dp">
        </TextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/drink_list"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/text3"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/group_drink_list_out_custom">

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="재료가 없습니다\n상점에서 재료를 구매하세요"
                android:textSize="14dp"
                android:textColor="@color/p_brown"
                android:gravity="center">
            </TextView>

            <androidx.core.widget.NestedScrollView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:id="@+id/group_scroll">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/drink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/member_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never">
                    </androidx.recyclerview.widget.RecyclerView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>