<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.iame.qnnect.android.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/p_ivory">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:src="@drawable/img_onboard1_svg">
        </ImageView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/img1"
            android:text="나를 알아가는 질문"
            android:layout_marginTop="50dp">
        </TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp"
            android:textColor="@color/gray_2"
            app:layout_constraintTop_toBottomOf="@id/text1"
            android:lineSpacingExtra="5dp"
            android:text="큐넥트 지킴이 넥트가\n여러분에게 단 하나의 질문을 드려요\nQ&amp;A를 통해 나를 알아가고 일상을 회고해보세요!"
            android:layout_marginTop="25dp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>