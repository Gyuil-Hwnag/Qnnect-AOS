<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/home_question_custom_out"
        android:paddingBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_question_custom_in"
            android:paddingBottom="35dp">
            <TextView
                android:id="@+id/dday_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="D-7"
                android:textSize="11dp"
                android:textStyle="bold"
                android:fontFamily="@font/im_hyemin_bold"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:background="@drawable/home_question_custom_out">
            </TextView>

            <TextView
                android:id="@+id/diary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="신사고 4인방 모임"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/gray_2"
                android:fontFamily="@font/im_hyemin_bold"
                android:layout_marginTop="32dp">
            </TextView>

            <TextView
                android:id="@+id/question_txt"
                android:layout_width="match_parent"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/diary_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="친구와 함께 가장 가고싶은 외국\n여행지는 어디인가요?"
                android:gravity="center"
                android:textSize="16dp"
                android:lineSpacingExtra="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/im_hyemin_bold"
                android:layout_marginTop="30dp">
            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>