<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.iame.qnnect.android.viewmodel.GroupBottomViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_custom">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/bookmark_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="27dp"
                android:text="그룹추가"
                android:fontFamily="@font/im_hyemin_bold"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black">
            </TextView>

            <ImageView
                android:id="@+id/store_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:padding="15dp"
                app:layout_constraintTop_toTopOf="@id/bookmark_txt"
                app:layout_constraintBottom_toBottomOf="@id/bookmark_txt"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="17dp"
                android:src="@mipmap/ic_close_btn_foreground">
            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottom_top"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="27dp"
            android:text="제목을 입력해주세요"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="18dp"
            android:textColor="@color/black">
        </TextView>

        <EditText
            android:id="@+id/name_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            android:textSize="16dp"
            android:fontFamily="@font/im_hyemin_regular"
            android:textColor="@color/gray_4"
            android:hint="10자 이내">
        </EditText>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_edit_txt"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="27dp"
            android:text="누구와 함께 하나요?"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="18dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            android:layout_marginTop="38dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="27dp"
            android:text="다이어리 색상을 골라주세요"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="18dp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            android:layout_marginTop="38dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="27dp"
            android:text="질문 주기를 선택해주세요"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="18dp"
            android:textColor="@color/black">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>