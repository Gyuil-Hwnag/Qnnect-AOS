<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_custom"
    android:paddingBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bookmark_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="27dp"
            android:text="카페 만들기"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black">
        </TextView>

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="@id/bookmark_txt"
            app:layout_constraintBottom_toBottomOf="@id/bookmark_txt"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="17dp"
            android:src="@mipmap/ic_close_btn_foreground">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottom_top"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:text="제목을 입력해주세요"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="18dp"
        android:textColor="@color/black">
    </TextView>

    <EditText
        android:id="@+id/name_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:textSize="18dp"
        android:fontFamily="@font/im_hyemin_regular"
        android:textColor="@color/p_brown"
        android:textColorHint="@color/gray_4"
        android:hint="10자 이내">
    </EditText>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_edit_txt"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:text="누구와 함께 하나요?"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="18dp"
        android:textColor="@color/black">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="27dp">

        <TextView
            android:id="@+id/group_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="친구"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:background="@drawable/group_select_ok">
        </TextView>

        <TextView
            android:id="@+id/group_family_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/group_friend_btn"
            android:text="가족"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp"
            android:textColor="@color/gray_1"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/group_select_fail">
        </TextView>

        <TextView
            android:id="@+id/group_couple_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/group_family_btn"
            android:text="커플"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp"
            android:textColor="@color/gray_1"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/group_select_fail">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:text="다이어리 색상을 골라주세요"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="18dp"
        android:textColor="@color/black">
    </TextView>

    <ImageView
        android:id="@+id/color_orange_btn"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:src="@mipmap/color_orange_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/color_in_custom_select">
    </ImageView>

    <ImageView
        android:id="@+id/color_pink_btn"
        app:layout_constraintTop_toTopOf="@id/color_orange_btn"
        app:layout_constraintBottom_toBottomOf="@id/color_orange_btn"
        app:layout_constraintLeft_toRightOf="@id/color_orange_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/color_pink_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/color_in_custom">
    </ImageView>

    <ImageView
        android:id="@+id/color_yellow_btn"
        app:layout_constraintTop_toTopOf="@id/color_orange_btn"
        app:layout_constraintBottom_toBottomOf="@id/color_orange_btn"
        app:layout_constraintLeft_toRightOf="@id/color_pink_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/color_yellow_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/color_in_custom">
    </ImageView>

    <ImageView
        android:id="@+id/color_sky_btn"
        app:layout_constraintTop_toTopOf="@id/color_orange_btn"
        app:layout_constraintBottom_toBottomOf="@id/color_orange_btn"
        app:layout_constraintLeft_toRightOf="@id/color_yellow_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/color_sky_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/color_in_custom">
    </ImageView>

    <ImageView
        android:id="@+id/color_brown_btn"
        app:layout_constraintTop_toTopOf="@id/color_orange_btn"
        app:layout_constraintBottom_toBottomOf="@id/color_orange_btn"
        app:layout_constraintLeft_toRightOf="@id/color_sky_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/color_brown_foreground"
        android:scaleType="centerCrop"
        android:background="@drawable/color_in_custom">
    </ImageView>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/color_orange_btn"
        android:layout_marginTop="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="27dp"
        android:text="질문 주기를 선택해주세요"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="18dp"
        android:textColor="@color/black">
    </TextView>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        android:thumb="@drawable/custom_seekbar_thumb"
        android:progressDrawable="@drawable/custom_seekbar_progress"
        android:splitTrack="false"/>

    <View
        android:layout_width="2dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="@id/day_three"
        app:layout_constraintRight_toRightOf="@id/day_three"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/seekBar"
        app:layout_constraintBottom_toBottomOf="@id/seekBar"
        android:layout_gravity="center">
    </View>
    <View
        android:layout_width="2dp"
        android:layout_height="15dp"
        app:layout_constraintLeft_toLeftOf="@id/day_five"
        app:layout_constraintRight_toRightOf="@id/day_five"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/seekBar"
        app:layout_constraintBottom_toBottomOf="@id/seekBar"
        android:layout_gravity="center">
    </View>

    <TextView
        android:id="@+id/day_one"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintLeft_toLeftOf="@id/seekBar"
        android:layout_height="wrap_content"
        android:text="매일"
        android:layout_marginLeft="3dp"
        android:gravity="bottom|center"
        android:textColor="@color/p_brown"
        android:textStyle="bold"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="16dp">
    </TextView>

    <TextView
        android:id="@+id/day_three"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintLeft_toRightOf="@id/day_one"
        app:layout_constraintRight_toLeftOf="@id/day_five"
        android:text="3일"
        android:gravity="center|bottom"
        android:textColor="@color/p_brown"
        android:textStyle="bold"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="16dp">
    </TextView>

    <TextView
        android:id="@+id/day_five"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintLeft_toRightOf="@id/day_three"
        app:layout_constraintRight_toLeftOf="@id/day_seven"
        android:text="5일"
        android:gravity="center|bottom"
        android:textColor="@color/p_brown"
        android:textStyle="bold"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="16dp">
    </TextView>

    <TextView
        android:id="@+id/day_seven"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="7일"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintRight_toRightOf="@id/seekBar"
        android:gravity="center|bottom"
        android:textColor="@color/p_brown"
        android:textStyle="bold"
        android:layout_marginRight="3dp"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="16dp">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/day_one"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/allow_btn_fail">

        <TextView
            android:id="@+id/ok_btn_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="완료"
            android:textSize="18dp"
            android:fontFamily="@font/im_hyemin_regular"
            android:textStyle="bold"
            android:textColor="@color/gray_6">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>