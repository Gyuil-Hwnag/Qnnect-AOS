<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.iame.qnnect.android.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/p_ivory">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:src="@mipmap/img_onboaring4_foreground">
        </ImageView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/img1"
            android:text="나만의 음료 만들기"
            android:layout_marginTop="50dp">
        </TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp"
            android:textColor="@color/gray_2"
            app:layout_constraintTop_toBottomOf="@id/text1"
            android:lineSpacingExtra="5dp"
            android:text="답변을 달거나 질문을 추가할수록 쌓이는\n
원두 포인트를 통해\n
나만의 음료를 만들어보세요"
            android:layout_marginTop="25dp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>