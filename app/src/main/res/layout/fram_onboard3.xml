<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.iame.qnnect.android.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/p_ivory">

<!--        <ImageView-->
<!--            android:id="@+id/img1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="350dp"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:layout_marginTop="150dp"-->
<!--            android:src="@drawable/onboard3_svg">-->
<!--        </ImageView>-->

        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/img2"
            android:layout_marginTop="195dp"
            android:background="@color/black">
        </View>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bmjua_ttf"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/txt2"
            android:text="- 50P"
            android:layout_marginBottom="10dp">
        </TextView>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bmjua_ttf"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/txt3"
            android:text="- 100P"
            android:layout_marginBottom="10dp">
        </TextView>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bmjua_ttf"
            android:textSize="20dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/img2"
            android:text="- 300P"
            android:layout_marginBottom="20dp">
        </TextView>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="190dp"
            android:layout_height="260dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="20dp"
            android:src="@mipmap/complete_drink_straw_foreground">
        </ImageView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/img2"
            android:text="나만의 음료 만들기">
        </TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp"
            android:textColor="@color/gray_2"
            app:layout_constraintTop_toBottomOf="@id/text1"
            android:lineSpacingExtra="5dp"
            android:text="답변을 달거나 질문을 추가할수록 쌓이는\n
원두 포인트를 통해\n
나만의 음료를 만들어보세요"
            android:layout_marginTop="25dp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>