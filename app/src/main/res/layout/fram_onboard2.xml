<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.iame.qnnect.android.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/p_ivory">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_group_1138">
        </ImageView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/img1"
            android:lineSpacingExtra="5dp"
            android:text="가족/친구/커플간의\nQ&amp;A 공유를 통한 소통"
            android:layout_marginTop="40dp">
        </TextView>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/im_hyemin_bold"
            android:textSize="16dp"
            android:textColor="@color/gray_2"
            app:layout_constraintTop_toBottomOf="@id/text1"
            android:lineSpacingExtra="5dp"
            android:text="Q&amp;A를 가족/친구/커플끼리 공유하여 서로에\n
 대해 알아가고 소통할 수 있어요!\n
기본 제공 질문 외에 카페 멤버에게 하고싶은 질문을 직접 추가할 수도 있어요\n
(큐넥트에서 카페란, 다이어리 그룹을 의미해요️)"
            android:layout_marginTop="25dp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>